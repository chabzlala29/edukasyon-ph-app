          %circle{:cx => "12", :cy => "13", :r => "4"}
        %strong Edukasyon Classes
      - unless is_admin_page?
        %form.form-inline.mt-2.mt-md-0.mr-2
          %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "text"}/
          %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search Class
