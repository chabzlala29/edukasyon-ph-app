= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
  = logo_tag
  %h1.h5.mb-3.font-weight-normal.text-muted Please sign in
  = f.email_field :email, autofocus: true, autocomplete: :email, placeholder: "Email address", class: "form-control"
  = f.password_field :password, placeholder: "Password", class: "form-control"
  - if devise_mapping.rememberable?
    .checkbox.mb-3
      %label
        = f.check_box :remember_me
        Remember me
  = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
  = link_to "Sign up", new_user_registration_path, class: "btn btn-lg btn-secondary btn-block"
