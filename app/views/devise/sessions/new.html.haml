= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f|
  %img.mb-4{:alt => "", :height => "72", :src => "https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg", :width => "72"}/
  %h1.h3.mb-3.font-weight-normal Please sign in
  = f.email_field :email, autofocus: true, autocomplete: :email, placeholder: "Email address", class: "form-control"
  = f.password_field :password, placeholder: "Password", class: "form-control"
  - if devise_mapping.rememberable?
    .checkbox.mb-3
      %label
        = f.check_box :remember_me
        Remember me
  = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
