= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f|
  = logo_tag
  %h1.h5.mb-3.font-weight-normal.text-muted Sign up
  = f.email_field :email, autofocus: true, autocomplete: :email, placeholder: "Email address", class: "form-control"
  = f.password_field :password, placeholder: "Password", class: "form-control"
  = f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control"
  = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"
  = link_to "Sign in", new_user_session_path, class: "btn btn-lg btn-secondary btn-block"
